<div class="page-header">
  <h1>Reset password</h1>
</div>

<% form @user_reset_password_form do  %>
    <%= field :email, readonly: true %>
    <%= hidden 'user_reset_password_form[password_reset_token]', object.password_reset_token %>
    <%= field :password %>
    <%= field :password_confirmation %>
<%= button 'Set new password' %>
<% end %>